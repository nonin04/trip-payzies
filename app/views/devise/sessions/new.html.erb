<% content_for(:title, t('pages.devise.session.new.title')) %>

<div class="h-full overflow-y-auto">
  <div class="mx-6 py-6 devise-card-style my-4">
    <p class="text-center text-xl font-bold"><%= t('pages.devise.session.new.welcome') %></p>
    <p class="text-center text-sm text-neutral-500"><%= t('pages.devise.session.new.sub_title') %></p>
    
    <div class="px-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="field w-full my-5">
          <div class="flex gap-0.5">
            <%= inline_svg('svg/mail.svg', class:"w-5")%>
            <%= f.label :email, t('pages.devise.session.new.email'), class:"block text-sm dark:text-white my-2"%>
          </div>
          
          <%= f.email_field :email, placeholder: "example@email.com", autocomplete: "email", class: "devise-form-style text-sm" %>
        </div>

        <div class="field w-full my-5">
          <div class="flex gap-0.5">
            <%= inline_svg('svg/key.svg', class:"w-5")%>
            <%= f.label :password, t('activerecord.attributes.user.password'), class:"block text-sm dark:text-white my-2"%>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class: "devise-form-style text-sm" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field flex my-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, t('pages.devise.session.new.remember_me'), class:"px-1 text-sm" %>
          </div>
        <% end %>

        <div class="my-6">
          <%= f.submit t('pages.devise.session.new.btn'), class: "devise-btn py-1.5 inline-block w-full shadow-lg devise-btn-animation"%>
        </div>
      <% end %>

      <%# <div class="text-center pb-6 pt-4"> %>
        <%#  <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "underline text-gray-700" %>
      <%# </div> %>

      <div class="w-full px-4 flex my-6 gap-2 items-center justify-between">
        <div class="h-[1px] flex-1 bg-neutral-200"></div>
        <p class="text-neutral-400 text-sm">Or continue with</p>
        <div class="h-[1px] flex-1 bg-neutral-200"></div>
      </div>

      <%= link_to user_google_oauth2_omniauth_authorize_path, class:"py-1.5 my-2 flex gap-2 items-center justify-center rounded-lg bg-transparent border border-neutral-300 text-neutral-500 hover:bg-neutral-100 devise-btn-animation shadow-md" do %>
        <%= inline_svg('svg/google.svg', class:"w-4")%>
        <p><%= t('pages.devise.session.new.google') %></p>
      <% end %>

      <div class="flex items-center gap-1 text-center justify-center pt-5 text-neutral-600 dark:text-white">
        <p><%= t('pages.devise.session.new.sign_up')%></p>
        <%= link_to t('pages.devise.registrations.new.title'), new_registration_path(resource_name), class: "underline hover:text-neutral-800 dark:text-white dark:hover:text-white"%>
      </div>
    </div>
  </div>
  <div class="flex text-xs gap-2 w-full justify-center underline">
    <%= link_to terms_path do %>
      <p>利用規約</p>
    <% end %>
    <%= link_to privacy_path do %>
      <p>プライバシーポリシー</p>
    <% end %>
    <a href="https://docs.google.com/forms/d/e/1FAIpQLSdeJXM3fO6AWB47l_JaVgGeycMHXtHLehyRQTtDsU3I47L7Lg/viewform?usp=dialog">お問い合わせ</a>
  </div>
</div>