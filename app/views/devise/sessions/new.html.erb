<% content_for(:title, "ログイン") %>

<div class= "bg-form-gray">
  <h2 class="font-bold">ログイン</h2>
  <div class="bg-white mx-4 px-5 pt-5 rounded-md">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field w-full pb-4">
        <%= f.label :email, "メールアドレス", class: "block text-gray-500 font-bold py-1"%>
        <%= f.email_field :email, placeholder: "メールアドレスを入力してください", autocomplete: "email", class: "form-style text-sm" %>
      </div>
      <div class="field w-full pb-4">
        <%= f.label :password, "パスワード", class: "block text-gray-500 font-bold py-1"%>
        <%= f.password_field :password, placeholder: "パスワードを入力してください", autocomplete: "current-password", class: "form-style text-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を記憶する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn"%>
      </div>
    <% end %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %>


  </div>

  <%= link_to "新規登録", new_registration_path(resource_name), class: ""%>
</div>
