  <%#  <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "underline text-gray-700" %>
  <%# </div> %>

</div>

<div class="text-center pt-5">
  <%= link_to "はじめての方はこちら", new_registration_path(resource_name), class: "text-primary-blue-100 underline hover:text-primary-blue-200"%>
</div>  