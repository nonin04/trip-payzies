<%# 最初はhidden、表示時はflex %>
<div class="hidden flex flex-col flex-1 min-h-0" data-form-step-target="participantForm">
  <div class="flex items-center mx-8 mt-2 mb-1">
    <h2 class="text-lg font-bold">参加者</h2>
  </div>

  <div class="card-style flex flex-1 flex-col overflow-y-auto px-4 py-2">
    <div class="flex flex-col pb-2 text-xs">
      <span>※人数の上限は10人です</span>
      <span>※名前は15字以内でご入力ください</span>
      <span>※同じ名前は登録できません</span>
    </div>
    <div class="font-bold">名前</div>
    <% @trip.participants.each_with_index do |participant, i| %>
      <%= f.fields_for :participants, participant do |p| %>
        <div data-form-step-target="eachParticipantForm" class="flex items-center py-2">
          <p class="font-mono text-lg flex justify-center w-9 pr-2 mx-auto"><%= i + 1 %></p>
          <%= p.text_field :name, class:"form-style mr-2" %>
          <div data-form-step-target="deleteBtn" data-action="click -> form-step#saveParticipants">
            <%= inline_svg("svg/delete.svg", class:"text-primary-red w-10 cursor-pointer") %> 
          </div>
        </div>
      <% end %>
    <% end %>
    <div data-form-step-target="addBtn" data-action="click -> form-step#saveParticipants", class="w-10 cursor-pointer ml-auto py-2">
      <%= inline_svg("svg/add.svg", class:"text-primary-blue-100") %> 
    </div>
  </div>
</div>