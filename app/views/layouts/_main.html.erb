<%# --reference------------------------------- %>
<% main_attrs = {} %>
<% main_attrs[:class] = "bg-form-gray dark:bg-neutral-900 dark:text-white flex-1 min-h-0 flex flex-col translate-x-0 transition-transform transform duration-300 ease-in-out" %>

<% unless devise_controller? %>
  <% main_attrs[:data] = { sidebar_target: "mainEl", action: "click->sidebar#hideSidebar" } %>
<% end %>
<%# --end------------------------------------- %>



<%# --main-- %>
<%= tag.main(**main_attrs) do %>
  <%= render 'layouts/flash_message/for_rails' %>
  <%= yield %>
<% end %>