<div class="absolute hidden w-full h-full" data-modal-target="descriptionModal">
  <div class="absolute w-full h-full z-40 bg-black opacity-0 backdrop-blur-sm transition-opacity duration-300 ease-in-out" data-modal-target="descriptionModalBg" data-action="click->modal#closeModal" data-modal-name-param="description"></div>

  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-3/4 h-1/2 z-50 opacity-0 scale-80 transition-all duration-300 ease-in-out" data-modal-target="descriptionModalContent">

    <div class="w-full card-style flex flex-col py-4 px-2">
      <h2 class="w-full text-xl font-bold text-gray-900 dark:text-white flex justify-center">共有QRコード</h2>
      <!-- 説明文 -->
      <%= image_tag "qr.png", class:"w-5/6 mx-auto" %>

<!-- ボタン -->
      <button class="w-2/5 h-10 bg-neutral-600 cursor-pointer font-bold text-white rounded-md shadow-primary mx-auto" type="button" data-action="click->modal#closeModal" data-modal-name-param="description"><%=t('common.close')%></button>
    </div>
  </div>
</div>