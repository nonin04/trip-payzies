<aside class="flex flex-col z-20 absolute top-0 right-0 bg-panel-navy h-screen transition-[width] w-0 transform pointer-events-none duration-200 ease-in-out overflow-hidden whitespace-nowrap" data-sidebar-target="sidebar">
  <%# header分の余白%>
  <div class="h-15"></div>

  <div class="flex-1 flex flex-col justify-between px-5 py-2">

    <%# ユーザーネームとアイコン %>
    <div class="flex flex-col items-center mx-auto"> 
      <%= inline_svg("svg/user.svg", class:"h-10 text-white flex-shrink-0")%>
      <span class="text-white mx-2 <%= current_user.name.length > 10 ? "text-sm" : "text-lg" %>"><%= current_user.name %></span>
    </div>

    <%# 区切り線 %>
    <div class=" h-[2px] bg-white my-2"></div> 

    <div class="flex-1 flex flex-col justify-between">
      <%# 各リンク %>
      <div class="flex flex-col px-2 my-2"> 
        <%= link_to "TOP", authenticated_root_path, class:"text-white text-xl" %>
        <span class=" text-white text-xl pt-4">グループ</span>
      </div>
      <%# ログアウト %>
      <%= link_to destroy_user_session_path, class:"flex cursor-pointer", data: {turbo_method: :delete, turbo_confirm: "ログアウトしますか？"} do %>
        <div class="flex items-center justify-center mx-auto">
          <span class="text-white text-lg">ログアウト</span>
          <%= inline_svg("svg/logout.svg", class:"h-7 text-white flex-shrink-0")%>
        </div>
      <% end %>
    </div>

  </div>

  <%# footer分の余白%>
  <div class="h-10"></div>
</aside>