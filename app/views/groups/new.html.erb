<% content_for(:title, "グループ作成") %>

<div class="flex flex-col h-full">

  <%# stimulus用フラッシュエラーメッセージ ------------------ %>
  <%= render 'layouts/flash_message/error_for_stimulus' %>
  
  <%# ページ案内 ------------------ %>
  <h1 class="mt-2 my-2 text-xl font-bold text-center">グループ作成</h1>

  <%# フォーム & ボタン ------------------ %>
  <%= form_with url: groups_path, html:{class:"flex flex-col flex-1 min-h-0"} do %>

    <%# フォームカード %>
    <div class="overflow-y-auto">
      <%= render 'groups/form_card' %>
      <%= render 'members/form_card', members: @group.members %>
    </div>

    <%# ボタン類 %>
    <section class="px-4 my-3">
      <div class="separator"></div>
      <div class="w-full flex gap-4">
        <%# step1時のボタン %>
        <%= link_to "戻る", groups_path, class:"w-1/4 main-action-btn bg-gray-400 text-white dark:bg-neutral-600" %>
        <%= submit_tag "保存", class: "flex-1 main-action-btn bg-primary-blue-100 text-white" %>
      </div>
    </section>
  <% end %>
</div>
