<div class="flex flex-col flex-1 h-min-0" data-form-step-target="tripForm">
  <h2 class="mx-8 mt-2 mb-1 text-lg font-bold">基本情報</h2>
  <div class="card-style flex flex-1 flex-col px-4 py-2">
    <div class="flex flex-col pb-2">
      <span class="text-xs">※旅行名は20字以内でご入力ください</span>
    </div>
    <div class="pb-2">
      <%= f.label :title, class:"font-bold" %>
      <%= f.text_field :title, data: {"form-step-target": "tripTitle", "action":"input->form-step#titleValidate"}, class: "form-style" %>
      <p class="text-primary-red text-xs pb-0.5" data-form-step-target="titleErrorMessage"></p>
    </div>

    <div class="pt-4">
      <%= f.label :departure_date, class:"font-bold"%>
      <%= f.date_field :departure_date, value: @trip.departure_date || Date.current, data: {"form-step-target": "tripDate", "action":"input->form-step#dateValidate"}, class: "form-style" %>
      <p class="text-primary-red text-xs pb-0.5" data-form-step-target="dateErrorMessage"></p>
    </div>
  </div>
</div>