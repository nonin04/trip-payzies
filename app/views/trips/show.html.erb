<% content_for(:title, "旅行詳細") %>

<%# ページ案内 ------------------ %>
<section class="flex items-center relative">
  <%= link_to trips_path(@trips), class:"absolute flex items-center rounded-md shadow-secondary h-6 w-10 py-0.5 px-0.5 ml-4 text-white bg-panel-navy dark:text-neutral-700 dark:bg-white" do %>
    <%= inline_svg("svg/navigation-arrow.svg", class:"w-full h-full rotate-180 ")%>
  <% end %>
  <h1 class="mt-2 my-2 text-xl font-bold w-full text-center">旅行詳細</h1>
</section>

<div class=" flex-1 overflow-y-auto mx-4">
  <%# 旅行カード ------------------ %>
  <section class="mb-4">
    <%= render 'trips/trip_card', trip: @trip, mode: :show %>
  </section>


  <section class="w-full mb-4 flex gap-4">
    <div class="flex flex-1 card-style h-10 items-center justify-between gap-2 px-2">
      <%= inline_svg("svg/share.svg", class:"w-6")%>
      <input class="flex-1 text-neutral-600 bg-neutral-100 rounded-md px-2 dark:text-white dark:bg-neutral-700" type="" id="share_link" value="開発中..." readonly>
      <%= inline_svg("svg/info.svg", class:"h-6") %>
    </div>
    <div class="gap-2 w-1/5 card-style h-10">
      <%= link_to test_trip_path(@trip),  class:"flex h-full w-full items-center justify-center" do %>
        <%= inline_svg("svg/graph.svg", class:"h-6") %>
      <% end %>
    </div>
  </section>

  <%# 参加者カード ------------------ %>
  <section class="mt-2 flex flex-col card-style" data-controller="accordion">
    <div class="flex justify-between py-2 cursor-pointer" data-accordion-target="bar" data-action="click->accordion#toggle">
      <p class="mx-4 font-bold">参加者</p>
      <%= inline_svg("svg/accordion.svg", class:"w-6 mx-6 transition-transform transform duration-200 text-gray-500", data:{"accordion-target": "icon"}) %>
    </div>
    

    <ul class="list-disc text-sm px-8 cursor-pointer h-0 transition-all duration-150 overflow-hidden" data-accordion-target="participantsEl" data-action="click->accordion#toggle">
      <% @participants.each do |participant|%>
      <li class="pb-2"><%= participant.name %></li>
      <% end %>
    </ul>
  </section>

  <%# サブ案内 ------------------ %>
  <p class="mx-8 mt-2 font-bold">立替一覧</p>

  <%# 立替カード一覧 ------------------ %>
  <section class="flex-1 flex flex-col">

    <% if @expenses.present? %>
    <%# 立替あれば表示 %>
      <% @expenses.group_by{|expense| expense.payment_date}.each do |date, expense|%>
        <div><%= date %></div>
          <% expense.each do |e|%>
            <%= link_to trip_expense_path(@trip, e), class:"mb-4" do %>
              <%= render 'expenses/expense_card', expense: e %>
            <% end %>
          <% end %>
      <% end %>

    <% else %> 
    <%# なければ画像表示 %>
      <%= inline_svg("svg/no-payment.svg", class:"w-3/5 my-auto mx-auto", draggable:"false") %>
    <% end %>

  </section>
</div>

<%# 仕切り線とボタン ------------------ %>
<div class="px-4 my-3">
  <div class="separator"></div>
  <div class="w-full flex gap-4">
    <%= link_to "立替記録を作成", new_trip_expense_path(@trip) , class:"flex-1 main-action-btn bg-action-yellow text-neutral-700" %>
    <% if @expenses.present?%>
      <%= link_to "精算結果", result_trip_path(@trip), class:"w-1/3 main-action-btn bg-primary-red text-white" %>  
    <% end %>
  </div>
</div>