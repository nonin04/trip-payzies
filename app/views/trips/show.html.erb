<div>
  <h1 class="mx-8 my-2 text-xl font-bold">旅行詳細</h1>
  <%= render 'trips/trip_card', trip: @trip, mode: :show %>
  <div class="card-style px-4 py-3">
    <div class="px-2 font-bold">参加者</div>
    <ul class="list-disc px-8 pt-2">
      <% @participants.each do |participant|%>
      <li class="text-gray-700"><%= participant.name %></li>
      <% end %>
    </ul>
  </div>

  <div class="mt-4 h-84 overflow-y-auto mx-auto flex flex-col">
    <div class="">
      <% @expenses.each do |expense|%>
        <%= link_to trip_expense_path(@trip, expense) do %>
          <%= render 'expenses/expense_card', expense: expense %>
        <% end %>
      <% end %>
    </div>
  </div>

    <div class="mx-4 py-3">
    <div class="h-1 bg-panel-navy"></div>
    <%= link_to new_trip_expense_path(@trip) do %>
      <div class="mt-3 rounded-md bg-action-yellow py-3 shadow-primary">
        <p class="text-gray-400 text-2xl text-center font-bold">立替記録を作成</p>
      </div>
    <% end %>
  </div>

</div>
