
<h1 class="mt-2 my-2 text-xl font-bold text-center">旅行編集</h1>
<%= form_with model: @trip do |f| %>
  <%= render 'trips/form_card', f: f %>
  <div class="flex px-4 py-4">
    <%= link_to "キャンセル", trips_path, class:"w-1/2 mx-6 py-2 btn-cancel shadow-primary" %>
    <%= f.submit "更新", class: "w-1/2 mx-6 py-2  btn-submit shadow-primary" %>
  </div>
<% end %>