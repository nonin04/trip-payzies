<h1 class="mx-8 my-2 text-xl font-bold">旅行一覧</h1>
<% if @trips.present? %>
  <div class="flex-1 min-h-0 overflow-y-auto flex flex-col">
      <% @trips.each do |trip|%>
        <%= link_to trip_path(trip) do %>
          <%= render 'trips/trip_card', trip: trip, mode: :index %>
        <% end %>
      <% end %>
  </div>
<% else %>
  <div class="h-[782px]">
    <img class="pt-[120px] h-full object-contain mx-auto" src="welcome.png" alt="" draggable="false">
  </div>
<% end %>


<div class="mx-4 my-3">
  <div class="h-1 bg-panel-navy"></div>
  <%= link_to new_trip_path do %>
    <div class="mt-2 rounded-md bg-action-yellow py-3 shadow-primary border-2 border-black">
      <p class="text-gray-700 text-2xl text-center font-bold">旅行記録を作成</p>
    </div>
  <% end %>
</div>