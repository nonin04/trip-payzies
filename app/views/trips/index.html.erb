<div>
  <h1 class="mx-8 my-2 text-xl font-bold">旅行一覧</h1>
  <% if @trips.present? %>
    <div class="h-180 overflow-y-auto mx-auto flex flex-col">
      <div class="">
        <% @trips.each do |trip|%>
          <%= link_to trip_path(trip) do %>
            <%= render 'trips/trip_card', trip: trip, mode: :index %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="h-182">
      <img class="pt-30 h-full object-contain mx-auto" src="welcome.png" alt="" draggable="false">
    </div>
  <% end %>



  <div class="mx-4 py-3">
    <div class="h-1 bg-panel-navy"></div>
    <%= link_to new_trip_path do %>
      <div class="mt-3 rounded-md bg-action-yellow py-3 shadow-primary">
        <p class="text-gray-400 text-2xl text-center font-bold">旅行を作成</p>
      </div>
    <% end %>
  </div>
</div>
