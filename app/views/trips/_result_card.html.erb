        <div class="card-style py-3 px-4 items-center flex justify-between">
          
          <%# from: %>
          <div class="w-1/3 text-lg font-bold"><%= settlement[:from].name %></div>
          
          <%# to: %>
          <div class="w-5/7 flex flex-col">
            <% settlement[:payments].each_with_index do |p, i| %>
              <div class="flex items-center justify-between">
                <%# 矢印と宛先 %>
                <div class="flex items-center">
                  <%= inline_svg("svg/long-arrow.svg", class:"w-6 rotate-180 mx-2 text-black dark:text-neutral-300") %>
                  <div class="text-lg font-bold"><%= p[:to].name %></div>
                </div>
                <%# 金額 %>
                <div class="text-lg font-bold ml-2">¥<%= number_with_delimiter(p[:amount]) %></div>
              </div>
              <%# 仕切り線 %>
              <% unless i + 1 == settlement[:payments].size %>
                <div class="h-0.5 bg-gray-200 w-full my-1.5"></div>
              <% end %>
            <% end %>
          </div>
        </div>